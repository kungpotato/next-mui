{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Next.js",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/next",
      "env": {
        "NODE_ENV": "development",
        "NODE_OPTIONS": "--inspect"
      },
      "console": "integratedTerminal",
      "restart": true,
      "runtimeArgs": [],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    }
  ]
}
